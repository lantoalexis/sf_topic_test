{% extends 'layout.html.twig' %}

{% form_theme form 'Default/form_errors_fields.html.twig'%}
{% form_theme form 'Default/form_errors_fields.html.twig'
    'Default/form_errors_fields.html.twig'%}

{% block page_header_breadcrumb_root %}home{% endblock %}
{% block page_header_breadcrumb_child %}{{ page_header_title }}{% endblock %}
{% block page_header_title %}{{ page_header_title }}{% endblock %}

{% block dynamic %}
    <div class="row" id="_user_view_topic_">
        {% block siderBarLeft %}
            {{ include('siderBarLeft/siderbar-left.html.twig',{'id':'1'}) }}
        {% endblock %}
        <div class="col-md-9">
            <section class="panel form-wizard">
                <header class="panel-heading">
                    <h2 class="panel-title">{{ header_title_panel }}</h2>
                </header>
                <div class="panel-body">
                    {{ form_start(form, {'attr':{'id':'form', 'class':'validate form-horizontal form-groups-bordered'}})}}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.title,'Titre Topic', {'label_attr':{'class':'col-md-3 control-label'}}) }}
                        <div class="col-md-5">
                            {{ form_widget(form.title, {'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.title) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.users,'Auteur', {'label_attr':{'class':'col-md-3 control-label'}}) }}
                        <div class="col-md-5">
                            {{ form_widget(form.users, {'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.users) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3"></div>
                        <div class="col-md-5">
                            {{ form_widget(form.save, {'attr':{'class':'btn btn-primary'}, 'label':'Modifier'}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </section>
        </div>
    </div>
{% endblock %}


{% block javascripts_current_page %}

    <script src="{{ asset('extension/vendor/jquery-validation/jquery.validate.js') }}" ></script>
    <script src="{{ asset('extension/vendor/jquery-maskedinput/jquery.maskedinput.js') }}" ></script>
    <script src="{{ asset('extension/vendor/bootstrap-maxlength/bootstrap-maxlength.js') }}" ></script>
    <script src="{{ asset('extension/vendor/pnotify/pnotify.custom.js') }}" ></script>
    <script src="{{ asset('extension/javascripts/forms/examples.validation.js') }}" ></script>


{% endblock %}

{% block css_current_page %}
    <link rel="stylesheet" href="{{ asset('extension/vendor/pnotify/pnotify.custom.css') }}">
{% endblock %}




